#!/bin/bash -e

puppify module <<-usage
  usage: puppify build haproxy --version [version]
usage

puppy_import installer getopt

eval set -- "$(/usr/bin/getopt -o v:m: -l version:,md5: -- "$@")"

while [ $# -ne 0 -a "$1" != "--" ]; do
  case "$1" in
    -v|--v*) VERSION=$2; shift;;
    -m|--m*) MD5=$2; shift;;
  esac
  shift
done

shift

install_service pcre-devel

MD5=$MD5 V=$VERSION make -f "$(service_dir)/Makefile" -C /src all
