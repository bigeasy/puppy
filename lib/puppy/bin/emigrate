#!/bin/bash -e

puppify module <<-usage
  usage: puppify emigrate

    Copy alan configuration from primary DNS server.
usage

trap "exit" SIGINT SIGTERM

host=alan@alvar.balance.south.virginia.runpup.com 
for file in .vim/ .usr/ \
    .bashrc .bash_profile .vimrc .gitconfig .ssh/config
do
    copy=$HOME/$file
    /usr/bin/rsync -avz -e "/usr/bin/ssh -o VerifyHostKeyDNS=yes" $host:$copy $copy
done
