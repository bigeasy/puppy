#!/bin/bash -e

puppify module <<-usage
  usage: puppify install rsyslog
usage

puppy_import installer

# Create a loggers group and add user in our service user range.
make_group loggers 227
group_assign loggers 1 700

# Remove default rsyslog.service.
sudo rm -f /lib/systemd/system/rsyslog.service

# Install our rsyslog.service and rsyslog configuration.
install_files root 644 etc
