#!/bin/bash -e

puppify module <<-usage
  usage: puppify install backup
usage

puppy_import installer

install_service ntp

on_boot ntpd

if [ "$(readlink /etc/localtime)" != "/usr/share/zoneinfo/UTC" ]
then
    echo "Setting timezone to UTC."
    sudo ln -sf /usr/share/zoneinfo/UTC /etc/localtime
fi
