############################################################################
### Policy for `user_restorecon`.
############################################################################
#
# Note that the `user_restorecon` command may not be able to relabel from
# anything to anything. It exists to apply the correct labels during 

# Run security context restoration as root.
puppy_job_as_root(user_restorecon)

#init_system_domain(user_restorecon_t, user_restorecon_exec_t)

# This resolves the error message from audit2allow that reads:
# 
#  This avc is a constraint violation.  You will need to add an attribute to
#  either the source or target type to make it work.
#
# Constraints are defined in
#  /home/alan/src/refpolicy/policy/constraints
#
# They are more rough stuff to do to a domain, limiting the transitions based
# on domination, expressing constraints based on types and attributes.
#
# This will apply the typeattribute can_change_object_identity, which allows
# the user_restorecon_exec_t to relabel.
domain_obj_id_change_exemption(user_restorecon_t)

# Run restorecon.
seutil_exec_setfiles(user_restorecon_t)
seutil_read_config(user_restorecon_t)
seutil_read_file_contexts(user_restorecon_t)

# DAC override describes the ability of root read and write files that root does
# not itself own. (TODO: Not sure what fowner is about, but it is in the same vein.)
allow user_restorecon_t self:capability { dac_override dac_read_search fowner };

# TODO: Not sure why this is necessary.
allow user_restorecon_t { default_context_t }:file read_file_perms;

# Allow relabeling from any type.
allow user_restorecon_t { file_type }:dir list_dir_perms;
relabelfrom_dirs_pattern(user_restorecon_t, { file_type }, { file_type })
relabelfrom_files_pattern(user_restorecon_t, { file_type }, { file_type })
relabelfrom_lnk_files_pattern(user_restorecon_t, { file_type }, { file_type })
relabelfrom_fifo_files_pattern(user_restorecon_t, { file_type }, { file_type })
relabelfrom_sock_files_pattern(user_restorecon_t, { file_type }, { file_type })

# For `unlabeled_t`.
kernel_relabelfrom_unlabeled_files(user_restorecon_t)

# Allow relabling to home, SSH types.
allow user_restorecon_t { user_home_t user_home_dir_t ssh_home_t }:dir relabelto;
allow user_restorecon_t { user_home_t ssh_home_t }:file relabelto;

# Check to see if SELinux is enforcing.
selinux_get_enforce_mode(user_restorecon_t)

# Read the home directory files and folders.
userdom_read_user_home_content_files(user_restorecon_t)
