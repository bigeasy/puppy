#!/bin/bash

echo HELLO
dir=$(/bin/readlink -f $(/usr/bin/dirname $0))
.  $dir/../configuration

cat /mnt/config/var/dns/current/ksk/*.ds > /etc/unbound/runpup.net.key
cat /mnt/config/var/dns/current/ksk/*.key >> /etc/unbound/runpup.net.key

cat <<EOL > /etc/unbound/unbound.conf
server:
	verbosity: 1
	statistics-interval: 0
	statistics-cumulative: no
	extended-statistics: yes
	num-threads: 2
	interface-automatic: no
    interface: 127.0.0.1
	chroot: ""
	username: "unbound"
	directory: "/etc/unbound"
	log-time-ascii: yes
	pidfile: "/var/run/unbound/unbound.pid"
	harden-glue: yes
	harden-dnssec-stripped: yes
	harden-referral-path: yes
	use-caps-for-id: yes
	unwanted-reply-threshold: 10000000
	prefetch: yes
	prefetch-key: yes
	dlv-anchor-file: "/etc/unbound/dlv.isc.org.key"
	trusted-keys-file: /etc/unbound/root.key
	val-clean-additional: yes
	val-permissive-mode: no
	val-log-level: 1
	trust-anchor-file: "/etc/unbound/runpup.net.key"
remote-control:
	control-enable: yes
	server-key-file: "/etc/unbound/unbound_server.key"
	server-cert-file: "/etc/unbound/unbound_server.pem"
	control-key-file: "/etc/unbound/unbound_control.key"
	control-cert-file: "/etc/unbound/unbound_control.pem"
stub-zone:
    name: "runpup.net"
EOL

$dir/../private/address --region $region --axis $axis | while read line
do
    pair=($line)
    master="^\w+\.balance\.(south|east)"
    slave="^\w+\.data"
    if [[ ${pair[0]} =~ $master ]] || [[ ${pair[0]} =~ $slave ]]
    then
        echo '    stub-addr: "'${pair[1]}'"' >> /etc/unbound/unbound.conf
    fi
done 
