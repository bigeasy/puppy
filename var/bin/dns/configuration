#!/bin/bash

conf=($(/bin/hostname | sed 's/.*\.\(.*\)\.\(.*\)\.\(.*\)\.runpup\.com/\1 \2 \3/'))
region="${conf[2]}"

if [ "${conf[0]}" = "balance" ]
then
    type="master"
else
    type="slave"
fi

horizontal="^east|west$"
if [[ "${conf[1]}" =~ $horizontal ]]
then
    axis="horizontal"
else
    axis="vertical"
fi
