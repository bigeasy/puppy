#!/bin/bash

. $PUPPY_LIBRARY

function usage() {
  cat <<-help | sed 's/^    //'
    usage: puppify install [options] [package, package...]

    options:
      
help
}

[ $# -eq 0 ] && usage

for package in $@
do
  installer="service/postfix/installer"
  [ -x "$installer" ] || abend "no such service"
  puppy_exec "$installer"
done
