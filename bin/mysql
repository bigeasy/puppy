#!/bin/bash

# You can run as root by via `sudo -H -u puppy mysql -u root`. This runs as
# the puppy user and `-H` sets the home directory.

user=$(whoami)
if [ $user != "root" ]
then
    echo "Must run as root." 2>&1
    exit 1
fi

password=$(ps ax | md5sum | cut -c 1-32)

MYSQL_OPTS=""

if [ -e /home/puppy/.my.cnf ]; then
    MYSQL_OPTS="--defaults-file=/home/puppy/.my.cnf"
fi

echo 'update user set password=PASSWORD("'$password'") where User='"'root'"';' | \
    /usr/bin/mysql $MYSQL_OPTS --user=root mysql
if [ $? -ne 0 ]; then
    echo "MySQL update of root password failed." 1>&2 
    exit 1
fi

/bin/rm -f /home/puppy/.my.cnf
/bin/touch /home/puppy/.my.cnf
/bin/chown puppy:puppy /home/puppy/.my.cnf 
/bin/chmod 400 /home/puppy/.my.cnf 

echo "[client]" >> /home/puppy/.my.cnf
echo "password=$password" >> /home/puppy/.my.cnf

/sbin/service mysqld restart
