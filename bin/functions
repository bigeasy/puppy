#!/bin/bash

trap "exit" SIGTERM SIGINT

function abend() {
  local message=$1
  echo "error: $message"
  exit 1
}

function install_service() {
  local package="$1"
  /bin/rpm -q "$package" > /dev/null
  if [ $? -ne 0 ]
  then
      /usr/bin/yum install -y nsd || abend "Cannot install NSD."
      /bin/systemctl stop nsd.service
  fi
}

# With this, I can move to a different form of layout in the future, one that
# will work correctly with,  
function puppy_exec() {
  local executable=$1
  shift 
  $executable $@
}
