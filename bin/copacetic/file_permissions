#!/bin/bash

dir=$(/bin/readlink -f "$(/usr/bin/dirname $0)/../..")
. $dir/bin/copacetic/functions

while read line
do
    set -f
    pair=($line) 
    set +f
    for file in $(/bin/find ${pair[0]} -maxdepth 0 ! -type d)
    do
        if [ $(stat --format=%a $file) != ${pair[1]} ]
        then
            echo $file
        fi
    done
done < $dir/bin/copacetic/file_permissions.txt
