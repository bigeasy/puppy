#!/bin/bash

dir=$(/bin/readlink -f "$(/usr/bin/dirname $0)/../..")
. $dir/bin/copacetic/functions

now=$(/bin/date --rfc-3339=ns | md5sum  | cut -f1 -d' ')
/usr/bin/logger -t "$(/bin/basename $0)[$$]" $now || \
    abend "Unable to record token $now to syslog."
/bin/grep "$(/bin/basename $0)\[$$\]: $now" /var/log/messages > /dev/null || 
    abend "Unable to record token $now to syslog."
