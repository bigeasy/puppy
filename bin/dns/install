#!/bin/bash

if [ $(whoami) != "root" ]; then
    echo "Must run as root." 1>&2
    exit 1
fi

dir=$(/bin/readlink -f "$(/usr/bin/dirname $0)/../..")
. $dir/bin/functions

/bin/rpm -q nsd > /dev/null
if [ $? -ne 0 ]
then
    /usr/bin/yum install -y nsd || abend "Cannot install NSD."
    /bin/systemctl stop nsd.service
fi

/bin/sed -i 's/PIDFile.*/PIDFile=\/var\/lib\/nsd\/chroot\/var\/run\/nsd\/nsd.pid/' \
    /lib/systemd/system/nsd.service 

