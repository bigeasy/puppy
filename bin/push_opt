#!/bin/bash

if [ $(whoami) == "root" ]; then
    echo "Do not run as root." 2>&1
    exit 1
fi

host=$1
sudo -E rsync --exclude=etc --delete -av -e "ssh -o VerifyHostKeyDNS=yes" --rsync-path="sudo rsync" /opt/ alan@$host.runpup.com:/opt/
sudo -E rsync --delete -av -e "ssh -o VerifyHostKeyDNS=yes" --rsync-path="sudo rsync" /node/ alan@$host.runpup.com:/node/
