#!/bin/bash

JANITOR=/home/alan/git/ecma/puppy/janitor

function sshdo() {
    local machine=$1
    shift
    /usr/bin/ssh -A $machine.california.runpup.net $@
    return $?
}

dir=$(/bin/readlink -f "$(/usr/bin/dirname $0)/../..")
. $dir/bin/functions

$dir/bin/california/gateway_dns
$dir/bin/california/gateway_git_pull
$dir/bin/california/yum_update

sshdo alvar.data.north $JANITOR/bin/california/yum_update
sshdo alvar.data.north $JANITOR/bin/california/internal_dns
sshdo alvar.data.north $JANITOR/bin/california/internal_git_pull

sshdo alvar.data.south $JANITOR/bin/california/yum_update
sshdo alvar.data.south $JANITOR/bin/california/internal_dns
sshdo alvar.data.south $JANITOR/bin/california/internal_git_pull
